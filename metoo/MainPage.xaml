<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="metoo.MainPage"
             BackgroundImage="back.png">

    <StackLayout Padding="5" Orientation="Vertical" VerticalOptions="Center" HorizontalOptions="Center">
        <Image Source="logo.png" WidthRequest="200" HeightRequest="200"/>

        <FlexLayout Direction="Column" AlignContent="Center" JustifyContent="SpaceBetween" HeightRequest="230" WidthRequest="360" Padding="0,30,0,0">
            <Button x:Name="vhod_button" WidthRequest="360" HeightRequest="62" ImageSource="entry_butt.png" BackgroundColor="#00FBC1BC"/>
            <Button x:Name="reg_button" WidthRequest="360" HeightRequest="62" ImageSource="regist_butt.png" BackgroundColor="#00FBC1BC"/>
            <Button x:Name="vhod1_button" WidthRequest="360" HeightRequest="62" ImageSource="just_cont.png" BackgroundColor="#00FBC1BC"/>
        </FlexLayout>

    </StackLayout>

</ContentPage>
